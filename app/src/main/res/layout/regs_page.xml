<!--        android:inputType="date"-->
<!--        android:textAlignment="center"-->
<!--        android:fontFamily="@font/noto_sans"-->
<!--        android:textStyle="bold"-->
<!--        />-->

    <EditText
        android:id="@+id/passEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_corner_view"
        android:hint="@string/password"
        android:textAlignment="center"
        android:fontFamily="@font/noto_sans"
        android:textStyle="bold"
        android:inputType="textPassword"
      />

    <EditText
        android:id="@+id/repeatPassEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_corner_view"
        android:hint="@string/repeat_password"
        android:textAlignment="center"
        android:fontFamily="@font/noto_sans"
        android:textStyle="bold"
        android:inputType="textPassword"
        />
    <Button
        android:id="@+id/btSend"
        android:layout_width="255dp"
        android:layout_height="60dp"
        android:fontFamily="@font/noto_sans"
        android:text="@string/send"
        android:onClick="onClickBtSend"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        android:layout_marginTop="20dp"
      />
    <Button
        android:id="@+id/btYouAlreadyHaveAnAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:text="@string/do_you_have_an_account"
        android:textColor="#6A755D"
        android:onClick="onClickBtYouAlreadyHaveAnAccount"
        />
    <Button
        android:id="@+id/btBack"
        android:layout_width="255dp"
        android:layout_height="60dp"
        android:fontFamily="@font/noto_sans"
        android:text="@string/back"
        android:onClick="onClickBtBack"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="15dp"
        android:layout_marginTop="20dp"
   />

</LinearLayout>